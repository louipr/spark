{
  "name": "spark-clone",
  "version": "1.0.0",
  "description": "A GitHub Copilot Spark clone that transforms natural language requests into comprehensive PRDs and coordinates with LLM agents to generate full-stack applications",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "ai",
    "llm",
    "copilot",
    "spark",
    "prd",
    "code-generation"
  ],
  "author": "Spark Clone Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@github/copilot-language-server": "^1.375.0",
    "@types/inquirer": "^9.0.9",
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "dotenv": "^16.3.0",
    "inquirer": "^9.3.8",
    "openai": "^4.20.0",
    "ora": "^7.0.1",
    "uuid": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "tsx": "^3.14.0",
    "typescript": "^5.2.0"
  },
  "bin": {
    "spark-clone": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ]
}
